<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HERBIFY - Login</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #1b4332;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            width: 100%;
            max-width: 1400px;
            display: flex;
            gap: 20px;
            padding: 20px;
        }

        .form-section {
            flex: 1;
            padding: 40px;
        }

        .logo {
            color: white;
            font-size: 24px;
            margin-bottom: 30px;
            font-weight: bold;
        }

        .welcome-text {
            color: white;
            font-size: 32px;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #a8a8a8;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            color: #a8a8a8;
            margin-bottom: 8px;
        }

        .form-group input {
            width: 100%;
            padding: 12px;
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid #4a4a4a;
            border-radius: 6px;
            color: white;
            font-size: 16px;
        }

        .password-input {
            position: relative;
        }

        .password-input input {
            padding-right: 40px;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #a8a8a8;
        }

        .login-btn {
            width: 100%;
            padding: 12px;
            background-color: #c5d5c5;
            border: none;
            border-radius: 6px;
            color: #1b4332;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .login-btn:hover {
            background-color: #a8bfa8;
        }

        .illustration {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .illustration img {
            max-width: 100%;
            height: 90vh;
            width: 100%;
            object-fit: cover;
            border-radius: 10px;
        }

        .signup-link {
            text-align: center;
            margin-top: 20px;
            color: #a8a8a8;
        }

        .signup-link a {
            color: #c5d5c5;
            text-decoration: none;
        }

        .signup-link a:hover {
            text-decoration: underline;
        }

        .forgot-password {
            text-align: right;
            margin-top: 8px;
        }

        .forgot-password a {
            color: #c5d5c5;
            text-decoration: none;
            font-size: 14px;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }
            .illustration {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-section">
            <h1 class="welcome-text">Welcome Back üåø</h1>
            <p class="subtitle">Sign in to access your skin care dashboard</p>
            
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">Username*</label>
                    <input type="text" id="username" name="username" placeholder="Enter your username" required>
                </div>

                <div class="form-group">
                    <label for="password">Password*</label>
                    <div class="password-input">
                        <input type="password" id="password" name="password" placeholder="Enter your password" required>
                        <button type="button" class="password-toggle">üëÅÔ∏è</button>
                    </div>
                    <div class="forgot-password">
                        <a href="/forgot-password">Forgot password?</a>
                    </div>
                </div>

                <button type="submit" class="login-btn">Sign In</button>
            </form>

            <% if (errorMessage.length > 0) { %>
                <p style="color: red;"><%= errorMessage %></p>
            <% } %>

            <div class="signup-link">
                New to Herbify? <a href="/signup">Create an account</a>
            </div>
        </div>

        <div class="illustration">
            <img src="images/login-bg.jpeg" alt="Login illustration">
        </div>
    </div>

    <script>
        document.querySelector('.password-toggle').addEventListener('click', function() {
            const passwordInput = document.querySelector('#password');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                this.textContent = 'üëÅÔ∏è';
            } else {
                passwordInput.type = 'password';
                this.textContent = 'üëÅÔ∏è';
            }
        });
    </script>
</body>
</html>