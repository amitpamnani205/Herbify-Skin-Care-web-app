            background: #FFB74D;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .claim-animation {
            position: fixed;
            pointer-events: none;
            z-index: 1000;
        }

        @keyframes float {
            0% { transform: translateY(0px); opacity: 1; }
            100% { transform: translateY(-100px); opacity: 0; }
        }

        .floating-token {
            animation: float 1s ease-out forwards;
            position: absolute;
            font-size: 24px;
        }

        /* Token Collection Animation */
        @keyframes collect {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }

        .collecting {
