        .reward-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            border: 2px solid transparent;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .reward-card.available {
            border-color: #90BC79;
            background: #E8F5E9;
        }

        .reward-card.claimed {
            background: #f0f0f0;
            opacity: 0.7;
        }

