            background: #7da568;
        }

        .scan-btn.disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        /* Days Grid */
        .days-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        .day-card {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            text-align: center;
            border: 2px solid transparent;
            transition: all 0.3s;
        }

        .day-card.current {
            border-color: #90BC79;
            background: #E8F5E9;
        }

        .day-card.completed {
            background: #E8F5E9;
        }

        .day-number {
